<div class="row">
	<div class="col-md-offset-2">
		<span class="crudTitle">Poliklinik Ekleme</span>
	</div>
	<div class="col-md-offset-2 col-md-8">
		<form class="form-horizontal" action="/policlinic/add" method="post">
			<div class="form-group">
				<div class="col-sm-12">
					<input type="text" class="form-control" id="name" placeholder="Poliklinik adı" name="Name">
				</div>
			</div>	
			<div class="form-group">
				<div class="col-sm-12">
					<select class="form-control" id="hospitals" name="hospitalId">
						<option value="-1" id="hospitalsSelect" selected>Lütfen hastane seçiniz</option>
					</select>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<button type="submit" class="btn btn-large btn-block btn-primary">Ekle</button>
				</div>
			</div>
		</form>
	</div>
</div>

<script>
	$.ajax({
		type: "Post",
		url: "/user/hospitals",
		success: function (response) {
			$.each(response, function (key, value) {
				$("#hospitals").append("<option value= " + value.Id + ">" + value.Name + "</option>");
			});
		},
		error: function (err) {
			alert("Hata 100(Policlinic - Add) : " + err);
		}
	});
</script>